<div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel">Profile Setting</h3>
        <small>Contact us at support@newappetite.com if you have any questions.</small>
      </div>
      <div class="modal-body" style="width: 600px; height: 415px;">

        <input type="hidden" value="<%= current_user.id unless current_user.id.nil?%>" id="user_id">
        <%= form_for :user, :url => update_profile_path, :html => {:multipart => true} do |f| %>
        <div class="panel" style="float: left; width: 225px; height: 336px;">
          <div>
            <%= f.label :profile_pic, :style => "margin-left: 42px;" %><br />
            <div class="" style="width: 159px;height: 184px;" id="profile_image">
              <img src='<%= @user.profile_pic unless @user.profile_pic.nil?%>' height=130 width=130 class="img-circle" style="border: 1px solid #CCCCCC;margin-left:28px"/>
              <%= f.file_field :profile_image,:id=>"profile_pic", :style=>"margin: 5px; width: 200px;" %>
            </div>
          </div>
          <div>
            <%= f.label :cover_photo, :style => "margin-left: 42px;" %>
            <div class="" style="width: 159px;height: 184px;" id="cover_image">
              <img src='<%= @user.cover_pic unless @user.cover_pic.nil?%>' height=130 width=130 class="img-thumbnail" style="border: 1px solid #CCCCCC;margin-left:28px"/>
              <%= f.file_field :cover_image,:id=>"cover_pic", :style=>"margin: 5px; width: 200px;" %>
            </div>
           </div>
        </div>

        <div class="panel" style="float: right; width: 325px; height: 336px;">
            <div class="form-group">
              <%= f.label :profile_name %>
              <%= f.text_field :profile_name, :class => "form-control" %>
              <small>Profile names can differ from account names</small>
            </div>
            <div class="form-group">
              <label class="">Social Media</label>
              <%= f.text_field :facebook_link, :class => "form-control",:placeholder => "Facebook"%></br>
              <%= f.text_field :twitter_link, :class => "form-control", :placeholder => "Twitter" %></br>
              <%= f.text_field :website_link, :class => "form-control", :placeholder => "Website"%>
              <small>Social media links will be displayed on your profile</small>
            </div>

          <div class="form-group">
            <label class="">Location</label>
            <%= f.text_field :location, :class => "form-control" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit :update, :class => "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
        <% end %>
    </div>
  </div>
</div>