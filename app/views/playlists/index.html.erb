<div class="container">
    <h1>Playlist</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <th><b>#</b></th>
        <th><b>Playlist Name</b><th>
      </thead>

      <%- unless @playlists.nil? %>
          <%- @playlists.each_with_index do |obj,index| %>
           <tr>
              <td><%= index+1 %></td>
              <td><%= link_to obj.name, playlist_tracks_path(obj.id)%></td>
             <td><%= link_to image_tag("/assets/delete.jpg", height: '20', width: '20'), playlist_path(obj.id), :method => :delete, 'data-toggle' => "tooltip", :title => "Delete"  %></td>
           </tr>
          <%- end %>
      <%- end %>
    </table>
<%= link_to 'New Playlist', new_playlist_path(params[:id]), class: "btn btn-primary" %>
</div>