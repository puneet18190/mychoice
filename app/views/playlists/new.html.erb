<div class="container">
    <h1> New Playlist</h1>
    <div class="form-group well">
        <%= form_for @playlist, url: {action: "create", controller: "playlists"}, class: "form-horizontal", role: "form" do |f| %>
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control", placeholder: "Playlist Name" %>
            </div>
            <div class="actions"><%= f.submit 'Save', class: "btn btn-primary" %></div>
        <%- end %>
    </div>
</div>